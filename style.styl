html, body
  height: 100%

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  display: flex
  flex-direction: column
  margin: 0

.main
  flex-direction: row
  position: relative
  box-sizing: border-box
  height: 100%

  display: flex
  flex: 1
  flex-flow: row wrap
  align-content: flex-start

  iframe
    border: none
    display: block
    width: 100%
    height: 100%

header
  display: flex

.filetree
  margin: 0
  padding: 0
  overflow-x: hidden
  overflow-y: auto
  min-width: 200px
  flex: 0 0 15%

  li
    cursor: pointer
    list-style-type: none
    padding-left: 1em
    position: relative
    whitespace: nowrap

    .delete
      display: none
      position: absolute
      right: 0
      top: 0

    &:hover
      background-color: lightyellow

      .delete
        display: inline-block

.actions
  position: absolute
  top: 0
  left: 200px
  z-index: 1

  button
    margin-right: 0.25em

.repo_info
  box-sizing: border-box
  position: absolute
  top: 0
  left: 0
  padding: 0.25em 1em
  width: 200px
  overflow: hidden
  border-bottom: 1px solid black
  height: 40px
  font-size: 0.8em

.console-wrap
  box-sizing: border-box
  position: absolute
  bottom: 0
  left: 0
  right: 0
  padding-left: 200px
  height: 100px
  width: 100%
  margin: 0

  .errors
    box-sizing: border-box
    border-top: 1px solid black
    color: red

  .notices, .errors
    margin: 0

  .notices
    padding: 0.5em

.status
  top: 0
  right: 0
  position: absolute
